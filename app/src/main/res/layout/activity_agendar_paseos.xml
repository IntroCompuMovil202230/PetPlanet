<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AgendarPaseosActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <Spinner
        android:id="@+id/spinnerMascota"
        style="@style/Widget.AppCompat.Spinner.DropDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_below="@id/toolbar2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"

        android:background="@drawable/spinnertext"
        android:entries="@array/mascotas"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/hintPaseo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerMascota"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"

        android:layout_marginBottom="20dp"
        android:text="Fecha de Paseo"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hintPaseo"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_edittext"
        android:drawableRight="@drawable/ic_calendar"
        android:gravity="center"
        android:hint="dd  / MM  /YYYY"
        android:inputType="date"
        android:minHeight="48dp"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/spinnerHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fecha"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:autofillHints=""
        android:background="@drawable/rounded_edittext"
        android:clickable="false"
        android:cursorVisible="false"

        android:ems="10"
        android:entries="@array/horas"
        android:focusable="false"
        android:focusableInTouchMode="false"

        android:hint="@string/fechapet"
        android:importantForAutofill="no"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColorHint="#757575"
        tools:ignore="SpeakableTextPresentCheck" />

    <Spinner
        android:id="@+id/spinnerPaseador"
        style="@style/Widget.AppCompat.Spinner.DropDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_below="@id/spinnerHora"
        android:layout_marginTop="40dp"
        android:background="@drawable/spinnertext"
        android:entries="@array/Paseadores"
        android:minHeight="48dp"

        android:layout_margin="20dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/buttonAgendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/spinnerPaseador"
        android:layout_marginTop="70dp"
        android:background="@drawable/rounded_edittext"

        android:text="Agendar!" />


</RelativeLayout>
